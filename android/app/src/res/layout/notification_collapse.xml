<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:weightSum="10"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:layout_weight="4"
        >
        <ImageView
            android:id="@+id/notificationCollapseImageId"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/person"
            android:layout_margin="10dp"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="3"
            >

            <TextView
                android:id="@+id/notificationCollapseTitleId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is title"
                android:textSize="@dimen/sxl"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/notificationCollapseDescriptionId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is description"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/ss"
                />
        </LinearLayout>
    </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="6"
            >

            <TextView
                android:id="@+id/call_reject"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="@dimen/ss"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:background="#f00"
                android:height="30dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/call_accept"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Answer"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/ss"
                android:gravity="center"
                android:background="#00f"
                android:height="30dp"
                android:textStyle="bold"
                />

        </LinearLayout>

</LinearLayout>