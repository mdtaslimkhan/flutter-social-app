<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/float_bg_black"
        android:orientation="vertical"
        android:layout_margin="0dp"
        >

        <ImageView
            android:id="@+id/receiverFullImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/receiverImage"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/person"
            app:civ_border_width="2dp"
            app:civ_border_color="#67B6F4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CR - Incoming call"
                android:textColor="#2ABA38"
                android:textSize="@dimen/mxl"
                />
            <TextView
                android:id="@+id/callerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caller name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sxl"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true"
            >

            <Button
                android:id="@+id/rejectCall"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/close_button"
                android:background="@drawable/circle_red"
                android:text="Reject"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="50dp"
                />

            <Button
                android:id="@+id/acceptCall"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/call_button"
                android:background="@drawable/circle_green"
                android:text="Accept"
                android:textColor="@color/colorWhite"
                android:layout_alignParentRight="true"
                android:textSize="8sp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="50dp"
                />

        </RelativeLayout>





    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>