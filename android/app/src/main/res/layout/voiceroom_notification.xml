<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:layout_weight="4"
        >
        <ImageView
            android:id="@+id/notificationCollapseImageId"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/notificationCollapseTitleId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is title"
                android:textSize="@dimen/sxl"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/notificationCollapseDescriptionId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is description"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/ss"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/call_accept"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Join"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/ss"
            android:gravity="center"
            android:background="@drawable/circle_green"
            android:height="30dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>





</LinearLayout>